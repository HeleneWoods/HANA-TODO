/* pages/calender/calender.wxss */
@import "../../assets/icon/iconFont.wxss";

.calendar, .weekComponent {
  display: flex;
  flex-wrap: wrap;
  margin: 0 5px;
  box-sizing: border-box;
}

.calendar {
  border-left: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}

.day, .weekDay {
  width: calc(14.28%);
  padding: 5px;
  border-width: 1px;
  box-sizing: border-box; /* Include padding and border in element's total width and height */
  text-align: center;
}

.day {
  border-top: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

.task {
  font-size: 12px;
  color: #333;
  margin-top: 5px;
}

.monthComponent {
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 120rpx;
}

