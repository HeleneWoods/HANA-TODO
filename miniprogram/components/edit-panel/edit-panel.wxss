page {
  color: #323232;
  width: 100%;
  height: 100vh;
  padding-bottom: env(safe-area-inset-bottom);
  padding-top: env(safe-area-inset-top);
}

.edit-form {
  width: 100%;
  height: 100%;
  background-color: rgb(230, 230, 230);
  display: flex;
  justify-content: center;
}
.form {
  width: 100%;
  margin-top: 50rpx;
  font-size: 14px;
}

.form-item-section {
  display: flex;
  background-color: #fff;
}
.form-item-section:not(:last-child) {
  margin-bottom: 20rpx;
}
.form-item-icon{
  height: 2.85em;
  width: 2.85em;
  position: relative;
}
.form-item-icon image {
  height: 60%;
  width: 60%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.form-item {
  flex: 1;
}
.panel-input {
  height: 2.85em;
}

.form-btn-section {
  margin-top: 50rpx;
}